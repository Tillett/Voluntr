<h1>Volunteer Sign Up</h1>
<p1><%= link_to "Already have an account? Sign in here", vollogin_path %></p1>
<p>
  <%= form_for(@volunteer_user) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :display_name, "Display Name" %>
    <%= f.text_field :display_name %>
    
    <%= f.label :zip_code, "Zip Code" %>
    <%= f.text_field :zip_code %>
    
    <%= f.label :about_me, "About Me" %>
    <%= f.text_area :about_me %>
    
    <%= f.label :password %>
    <%= f.password_field :password %>
    
    <%= f.label :password_confirmation, "Confirm" %>
    <%= f.password_field :password_confirmation %>
    
    <%= f.label :no_search, "Hide me from user searches" %>
    <%= f.check_box :no_search %>
    
    <%= f.submit "Create account" %>
  
  <% end %>
</p>