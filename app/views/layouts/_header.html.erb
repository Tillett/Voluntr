<header class="navbar navbar-fixed-top navbar-inverse">
    <div class = "container">
        <%= link_to "Voluntr", home_url %>
        <nav>
            <ul class = "nav navbar-nav navbar-right">
                <li><%= link_to "Home", home_url  %></li>
                <li><%= link_to "About", about_path %></li>
                <% if request_user_logged_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          Account <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to "Profile", current_request_user %></li>
                          <li><%= link_to "Settings", '#' %></li>
                          <li class="divider"></li>
                          <li>
                            <%= link_to "Log out", reqlogout_path, method: :delete %>
                          </li>
                        </ul>
                      </li>
                <% elsif volunteer_user_logged_in? %>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                          Account <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                          <li><%= link_to "Profile", current_volunteer_user %></li>
                          <li><%= link_to "Settings", '#' %></li>
                          <li class="divider"></li>
                          <li>
                            <%= link_to "Log out", vollogout_path, method: :delete %>
                          </li>
                        </ul>
                      </li>
                <% else %>
                  <li><%= link_to "Req Log in", reqlogin_path %></li>
                  <li><%= link_to "Vol Log in", vollogin_path %></li>
                <% end %>
                </li>
                <li><%= link_to "FAQ", faq_path %></li>
            </ul>
        </nav>
    </div>
</header>