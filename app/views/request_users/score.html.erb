
    <h1>Organization Review</h1>
    <section class = "container-section">
    <p>
        <%= form_for RequestUserScorecard.find(params[:request_user_id]) do |f| %>
            <%= f.hidden_field :request_user_id %>
            <%= hidden_field_tag(:rpjid, params[:rpjid]) %>
            
            <%= f.label :leadership, "Leadership" %>
            <%= f.text_field :leadership %><br>
            
            <%= f.label :treatment, "Treatment" %>
            <%= f.text_field :treatment %><br>
            
            <%= f.label :committedness, "Committedness" %>
            <%= f.text_field :committedness %><br>
            
            <%= f.submit "Confirm Review" %>
        <% end %>
    </p>
    </section>