  <%= f.label :wed_en %>
  <%= f.time_field :wed_en %>
  
  <%= f.label :thur_st %>
  <%= f.time_field :thur_st %>
  
  <%= f.label :thur_en %>
  <%= f.time_field :thur_en %>
  
  <%= f.label :fri_st %>
  <%= f.time_field :fri_st %>
  
  <%= f.label :fri_en %>
