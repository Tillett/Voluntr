<%= form_for(@request_post) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  
  <%= f.label :location %>
  <%= f.text_field :location %>
  
  <%= f.label :date %>
  <%= f.date_field :date %>
  
  <%= f.label :description %>
  <%= f.text_area :description %>
  
  <%= f.submit "Post" %>
<% end %>
